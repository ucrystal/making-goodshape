<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeebeb"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/profilePhoto_default"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/profile_default" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="홍길동"
        android:textColor="#5ea7be"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신장    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5ea7be"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5ea7be"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   cm"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5ea7be"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몸무게    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5ea7be"
            android:textSize="15dp" />
         
        <TextView
            android:id="@+id/textView_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5ea7be"
            android:textSize="25dp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/textView2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   kg"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5ea7be"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" 
        android:layout_marginTop="80dp">

        <Button
            android:id="@+id/modifyProfile_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:background="#5ea7be"
            android:text="수정"
            android:textSize="20dp" 
            android:textStyle="bold"
            android:textColor="#ffffff" />
        
        <Button
            android:id="@+id/confirmProfile_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#5ea7be"
            android:text="저장"
            android:textSize="20dp" 
            android:textColor="#ffffff"
            android:textStyle="bold" />
        
    </LinearLayout>

</LinearLayout>